<h1>Tutors</h1>
<strong>Tutors --> Edit Tutor</strong>
<hr>

<%= form_for @tutor do |f|%>
    <%= f.label "Tutor Name"%><br>
    <%= f.text_field :name%><br><br>

    <%= f.label "Select a Campus"%><br>
    <%= f.collection_select :location_id, @locations, :id, :name%><br><br>

    <%= f.submit %><br><br>


    <form method="POST" action="/../../tutors/<%=@tutor.id%>">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete">
    </form><br><br><br>
<%end%>

<br><hr>