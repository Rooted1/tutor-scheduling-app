<body>
    <div class="container">
        <h3><strong><em>Edit Tutor Details</em></strong></h3><br>
        <%= form_for @tutor do |f|%>
            <%= f.label "Name:"%>
            <%= f.text_field :name%><br><br>

            <%= f.label "Location:"%>
            <%= f.collection_select :location_id, @locations, :id, :name%><br><br>

            <hr><br>

            <%= f.submit %><br><br><br>

            <form method="GET" action="/tutors/<%=@tutor.id%>">
                <input type="submit" value="Cancel">
            </form><br>

            <hr><br>


            <form method="POST" action="/../../tutors/<%=@tutor.id%>">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" value="Delete">
            </form><br><br><br>
        <%end%>

        <br><hr>
    </div>
</body>