<h3>Add New Tutor</h3>

<%= form_for @tutor do |f|%>
    <%= f.label "Tutor Name"%><br>
    <%= f.text_field :name%><br><br>

    <%= f.label "Select a Campus"%><br>
    <%= f.collection_select :location_id, @locations, :id, :name%><br><br>
 
    <%= f.label "Select a Subject"%><br>
    <%@tutor_subjects%>

    <%end%>
    <%= f.collection_check_boxes :subject_id, @tutor_subjects, :id, :name%><br><br>

    <%=f.submit %>
<%end%>