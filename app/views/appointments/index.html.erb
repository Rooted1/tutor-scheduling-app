<h1>Appointments</h1>
<hr>

<h3><em>Click on an appointment below to view its details</em></h3>

<ul>
    <% @appointments.each do |appointment| %>
        <li><%= link_to appointment, appointment_path(appointment)%></li>
    <%end%>
</ul><br>

<table style="width:100%">
    <tr>
        <th height="50">Student</th>
        <th height="50">Location</th>
        <th height="50">Subject</th>
        <th height="50">Tutor</th>
        <th height="50">Date</th>
        <th height="50">Time</th>
        <th height="50"> </th>
    </tr>
    <% @appointments.each do |appointment| %>
        <tr>
            <td width="14%"><%=appointment.student.name%></td>
            <td width="14%"><%=appointment.location.name%></td>
            <td width="14%"><%=appointment.subject.name%></td>
            <td width="14%"><%=appointment.tutor.name%></td>
            <td width="14%"><%=appointment.date%></td>
            <td width="14%"><%=appointment.time.strftime("%H:%M")%></td>
            <td width="14%", height="30"><%=link_to "View Appt", appointment_path(appointment)%></td>
        </tr>
    <% end %>
</table><br><br>

<form method="GET" action="appointments/new">
    <input type="submit" value="+ Book New Appointment">
</form>

<br><hr>