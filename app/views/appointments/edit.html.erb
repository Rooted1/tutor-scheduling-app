</head>
<body>
    <div class="container">
        <hr>
        <h3><strong><em>Edit Appointment Details</em></strong></h3><br>
        <%= form_for @appointment do |f|%>
            <%= f.label "Location: " %>
            <%= f.collection_select :location_id, @locations, :id, :name%><br><br>
            <%= f.label "Tutor: " %>
            <%= f.collection_select :tutor_id, @tutors, :id, :name%><br>
            <font color="red"><%= f.error_messages(@appointment, :tutors) if flash[:appointment_attributes]%></font><br>
            <%= f.label "Subject: " %>
            <%= f.collection_select :subject_id, @subjects, :id, :name%><br><br>
            <font color="red"><%= f.error_messages(@appointment, :subject) if flash[:appointment_attributes]%></font>

            <%= f.label "Date: " %>
            <%= f.date_field :date%><br><br>
            <font color="red"><%= f.error_messages(@appointment, :date) if flash[:appointment_attributes]%></font>

            <%= f.label "Time: " %>
            <%= f.time_field :time%><br>
            <font color="red"><%= f.error_messages(@appointment, :time) if flash[:appointment_attributes]%></font><br>

            <hr><br>

            <div class="update-button"><%= f.submit "Update Appointment" %></div>
        <%end%><br><br>

        <form method="GET" action="/appointments">
            <input type="submit" value="Cancel">
        </form><br>

        <hr><br>

        <form method="POST" action="/appointments/delete">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" value="Delete Appointment">
        </form><br>

        <hr>
    </div>
</body>